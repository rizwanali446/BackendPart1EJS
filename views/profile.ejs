<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="flex justify-end">
        <a
          class="border-zinc-800 border-2 hover:border-blue-700 bg-red-900 px-3 py-1 rounded-md"
          href="/logout"
          >Logout</a
        >
      </div>
      <div class="flex items-start gap-5">
        <!-- to create profile iamge below html -->
        <div class="w-10 h-10 rounded-md overflow-hidden">
          <img
            class="w-full h-full object-cover"
            src="/images/uploads/<%=user.profilepic %>"
            alt=""
          />
        </div>
        <h3 class="text-3xl">
          <span class="text-3xl text-red-900">Profile hello</span>,<%=
          user.username%>
        </h3>
      </div>

      <h5 class="mb-5 mt-3">you can create a new post</h5>

      <form method="post" action="/post">
        <textarea
          placeholder="whats on your mind?"
          class="w-1/3 p-3 block outline-none bg-transparent border-2 border-zinc-800 rounded-md"
          name="content"
        ></textarea>
        <input
          class="px-3 py-2 bg-blue-600 rounded-md block mt-2"
          type="submit"
          value="Create new post"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-zinc-400 mt-2">Your posts belows are:</h3>
        <div class="container border-1 mt-5">
          <% user.posts.reverse().forEach(function(post){ %>
          <div
            class="w-1/3 border-2 bo p-5 rounded-md bg-zinc-600 border-zinc-800"
          >
            <h4 class="text-blue-400 mb-2">@<%= user.username %></h4>
            <p><%= post.content %></p>
            <small class="mt-2 inline-block"
              ><%= post.likes.length %> likes</small
            >
            <div class="btn flex gap-5 mt-2">
              <a class="text-blue-500" href="/like/<%= post._id %>">
                <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike"%>
              </a>
              <a class="text-zind-600" href="/edit/<%= post._id%>">edit</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
